# Get all staged JS files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.js$')

# If there are staged JS files
if [ -n "$STAGED_FILES" ]; then
  # Run ESLint and stop commit if errors exist
  npx eslint $STAGED_FILES || ESLINT_EXIT=$?
  if [ "$ESLINT_EXIT" -eq 2 ]; then
    echo "ESLint found errors. Commit aborted."
    exit 1
  fi

  # Run Prettier on staged files
  npx prettier --write $STAGED_FILES

  # Stage any files that were changed by Prettier
  git add $STAGED_FILES
fi